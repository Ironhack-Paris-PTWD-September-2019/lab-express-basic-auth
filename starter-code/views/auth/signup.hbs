
<form id="form" action="/signup" method="POST">
  <h1>Sign Up</h1>
  {{#if errorM}}
  <div class='errorM'>{{errorM}}</div>
  {{/if}} 

  <label for="username" >Username</label><br>
  <input type="text" name="username" required minlength="6" placeholder="Minimum 6 caracters">

  <label for="password" >Password</label><br>
  <input id="passwordId" type="password" name="password" required minlength="10" placeholder="Minimum 10 caracters">

  <button type="submit">Create account</button>
  <p class="account-message">
    Already have an account? <a href="/login">Log In</a>
  </p>
</form>
